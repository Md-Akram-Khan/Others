
void traversal(int initial, int final)
{
  int num = initial;
  for(int i = 2; i <= 1415; i++)
    {
        for(int j = i - 1; j >= 1; j--)
        {
            a[j][i - j] =  num;
            num++;
            if(num > final)
                break;
        }
    }
}
